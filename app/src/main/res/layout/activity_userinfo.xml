<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    >

    <com.daoyiksw.browsesocial.views.compant.Titlabar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        />

    <RelativeLayout
        android:id="@+id/useriamgebox"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@id/titleBar"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        >

        <ImageView
            android:id="@+id/useriamge"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/userimage"
            />
        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:scaleType="fitXY"
            android:src="@mipmap/xiangji"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/item_box1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:padding="12dp"
        android:background="@color/whilte"
        android:layout_below="@id/useriamgebox"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:textColor="#ff333333"
            android:textSize="13sp"
            android:layout_gravity="center_vertical"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="text"
            android:background="@color/whilte"
            android:text="张张张"
            android:textColor="#ff8382f8"
            android:textSize="13sp"
            android:gravity="end|center_vertical"
            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:padding="12dp"
        android:background="@color/whilte"
        android:layout_below="@id/item_box1"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="性别"
            android:textColor="#ff333333"
            android:textSize="13sp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="男"
                android:textColor="#ff999999"
                android:textSize="13sp"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@drawable/shape_sexno"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="女"
                android:textColor="#ffffffff"
                android:textSize="13sp"
                android:layout_marginLeft="20dp"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@drawable/shape_sex"
                />

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>