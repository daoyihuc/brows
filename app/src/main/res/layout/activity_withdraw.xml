<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whilte"
    >

    <RelativeLayout
        android:id="@+id/box1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="28dp"
        android:paddingTop="28dp"
        android:paddingLeft="12dp"
        >

        <ImageView
            android:id="@+id/label"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:scaleType="fitXY"
            android:src="@mipmap/weixinqianbao"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@id/label1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信充值"
            android:textColor="#ff333333"
            android:textSize="14sp"
            android:layout_toRightOf="@id/label"
            android:layout_marginLeft="11dp"
            />

        <TextView
            android:id="@id/label2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="亿万用户的选择，更快更安全"
            android:textColor="#ffa6a6a6"
            android:textSize="10sp"
            android:layout_below="@id/label1"
            android:layout_toRightOf="@id/label"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="9dp"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="fitXY"
            android:src="@mipmap/dui"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"

            />

    </RelativeLayout>
    <View
        android:id="@id/label3"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#eeeeee"
        android:layout_below="@id/box1"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        />

    <TextView
        android:id="@+id/label4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="微信提现"
        android:textColor="#ff212121"
        android:textSize="14sp"
        android:layout_below="@id/label3"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="12dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="微信提现：充值说明充值说明充值说明充值说明"
        android:textColor="#ff212121"
        android:textSize="10sp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/label3"
        android:layout_marginTop="20dp"
        android:layout_marginRight="12dp"
        />
    <LinearLayout
        android:id="@+id/box2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/label4"
        android:layout_marginTop="39dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        >

        <ImageView
            android:layout_width="23dp"
            android:layout_height="30dp"
            android:src="@mipmap/q_label"
            android:layout_gravity="center|center_vertical"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/whilte"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:hint="请输入提现金额"
            android:textCursorDrawable="@drawable/textcursor"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:inputType="number"
            android:layout_marginLeft="10dp"
            />

    </LinearLayout>
    <TextView
        android:id="@+id/label5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="账户余额:"
        android:textColor="#ff212121"
        android:textSize="14sp"
        android:layout_below="@id/box2"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="12dp"
        />
    <TextView
        android:id="@+id/Balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="550元"
        android:textColor="#8382F8"
        android:textSize="14sp"
        android:layout_below="@id/box2"
        android:layout_toRightOf="@id/label5"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="12dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="全部提现"
        android:textColor="#ff8382f8"
        android:textSize="14sp"
        android:layout_below="@id/box2"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        />

    <Button
        android:layout_width="344dp"
        android:layout_height="44dp"
        android:layout_below="@id/label5"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="立即提现"
        android:background="@drawable/shape_phone"
        android:textColor="@color/whilte"
        />




</RelativeLayout>