<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp"
    android:paddingRight="12dp"
    android:paddingLeft="12dp"
    >

    <ImageView
        android:id="@+id/useriamge"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:src="@mipmap/userimage"
        android:layout_marginRight="10dp"
        />
    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="张张张"
        android:textColor="#ff8382f8"
        android:textSize="13sp"
        android:layout_toRightOf="@id/useriamge"
        />
    <TextView
        android:id="@+id/comment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2020-01-09"
        android:textColor="#ff999999"
        android:textSize="10sp"
        android:layout_below="@id/username"
        android:layout_toRightOf="@id/useriamge"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/comment_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="很优秀的文章！！我很赞同！！"
        android:textColor="#ff333333"
        android:textSize="12sp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_below="@id/useriamge"
        android:layout_marginTop="18dp"
        />
    <LinearLayout
        android:id="@+id/comment_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/comment_details"
        android:layout_marginTop="10dp"
        android:paddingTop="9dp"
        android:paddingBottom="9dp"
        android:paddingLeft="4dp"
        >
        <ImageView
            android:id="@+id/comment_img"
            android:layout_width="77dp"
            android:layout_height="51dp"
            android:scaleType="fitXY"
            android:src="@mipmap/homebanner"
            />
        <TextView
            android:id="@+id/comment_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="如果有一天，你成为了一个设计师，你会如何去..."
            android:textColor="#ff333333"
            android:textSize="13sp"
            android:layout_marginLeft="10dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="5dp"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/comment_box"
        android:background="#eeeeee"
        android:layout_marginTop="10dp"
        />



</RelativeLayout>