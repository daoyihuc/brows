<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    >
    <com.daoyiksw.browsesocial.views.compant.Titlabar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/whilte"
        />

    <RelativeLayout
        android:id="@+id/box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/beij"
        android:layout_below="@id/titleBar"
        android:layout_marginTop="10dp"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        >
        <TextView
            android:id="@+id/label1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的账户 (元)"
            android:textColor="#ffffffff"
            android:textSize="13sp"
            android:layout_marginTop="34dp"
            android:layout_marginLeft="19dp"
            />
        <TextView
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15580.00"
            android:textColor="#ffffffff"
            android:textSize="25sp"
            android:layout_below="@id/label1"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="19dp"
            />
        <Button
            android:id="@+id/recordButton"
            android:layout_width="75dp"
            android:layout_height="25dp"
            android:text="账户记录"
            android:textColor="#ff8382f8"
            android:textSize="12sp"
            android:background="@drawable/shape_accoutbutton"
            android:layout_marginTop="34dp"
            android:layout_alignParentRight="true"
            android:drawableRight="@mipmap/jiantou"
            android:drawableTint="#ff8382f8"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/count"
            android:layout_marginTop="20dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="累计礼物"
                    android:textColor="#ffffffff"
                    android:textSize="10sp"
                    android:gravity="center_vertical|center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="15000.00"
                    android:textColor="#ffffffff"
                    android:textSize="12sp"
                    android:gravity="center_vertical|center"
                    android:layout_marginTop="10dp"
                    />
            </LinearLayout>
            <View
                android:layout_width="1px"
                android:layout_height="15dp"
                android:background="@color/whilte"
                android:layout_gravity="center_vertical"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="累计充值"
                    android:textColor="#ffffffff"
                    android:textSize="10sp"
                    android:gravity="center_vertical|center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="15000.00"
                    android:textColor="#ffffffff"
                    android:textSize="12sp"
                    android:gravity="center_vertical|center"
                    android:layout_marginTop="10dp"
                    />
            </LinearLayout>
            <View
                android:layout_width="1px"
                android:layout_height="15dp"
                android:background="@color/whilte"
                android:layout_gravity="center_vertical"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="累计提现"
                    android:textColor="#ffffffff"
                    android:textSize="10sp"
                    android:gravity="center_vertical|center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="15000.00"
                    android:textColor="#ffffffff"
                    android:textSize="12sp"
                    android:gravity="center_vertical|center"
                    android:layout_marginTop="10dp"
                    />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/box1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/box"
        android:layout_marginTop="10dp"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:background="@drawable/shape_radiuitem"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="12dp"
        >

        <TextView
            android:id="@+id/box1_label1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前余额:"
            android:textColor="#ff333333"
            android:textSize="13sp"
            android:layout_marginRight="11dp"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15889.00"
            android:textColor="#ff8382f8"
            android:textSize="15sp"
            android:layout_toRightOf="@id/box1_label1"
            android:layout_centerVertical="true"
            />

        <Button
            android:id="@+id/withdraw"
            android:layout_width="46dp"
            android:layout_height="21dp"
            android:text="提现"
            android:textColor="@color/whilte"
            android:textSize="13sp"
            android:background="@drawable/shape_accoutbutton2"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />
        <Button
            android:id="@+id/Recharge"
            android:layout_width="46dp"
            android:layout_height="21dp"
            android:text="充值"
            android:textColor="#ff8382f8"
            android:textSize="13sp"
            android:background="@drawable/shape_accoutbutton1"
            android:gravity="center"
            android:layout_toLeftOf="@id/withdraw"
            android:layout_marginRight="15dp"
            />


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/box2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/box1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/shape_accoutbutton"
        android:paddingBottom="21dp"
        >
        <RelativeLayout
            android:id="@+id/box2_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            >
            <View
                android:layout_width="3dp"
                android:layout_height="13dp"
                android:background="#ff8382f8"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/label2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="礼物收益"
                android:textColor="#ff333333"
                android:textSize="14sp"
                android:layout_marginLeft="13dp"
                android:layout_centerVertical="true"

                />

        </RelativeLayout>

        <TextView
            android:id="@+id/giftButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="礼物收益记录"
            android:textColor="#ff8382f8"
            android:textSize="12sp"
            android:drawableRight="@mipmap/jiantou"
            android:layout_alignParentRight="true"
            android:drawablePadding="5dp"
            android:drawableTint="#ff8382f8"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            />
        <View
            android:id="@+id/separation"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#eeeeee"
            android:layout_below="@id/box2_1"
            android:layout_marginTop="15dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/separation"
            android:layout_marginTop="20dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="今日收益"
                    android:textColor="#000000"
                    android:textSize="10sp"
                    android:gravity="center_vertical|center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="15000.00"
                    android:textColor="#8382F8"
                    android:textSize="15sp"
                    android:gravity="center_vertical|center"
                    android:layout_marginTop="10dp"
                    />
            </LinearLayout>
            <View
                android:layout_width="1px"
                android:layout_height="15dp"
                android:background="@color/whilte"
                android:layout_gravity="center_vertical"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="昨日收益"
                    android:textColor="#000000"
                    android:textSize="10sp"
                    android:gravity="center_vertical|center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="15000.00"
                    android:textColor="#8382F8"
                    android:textSize="15sp"
                    android:gravity="center_vertical|center"
                    android:layout_marginTop="10dp"
                    />
            </LinearLayout>
            <View
                android:layout_width="1px"
                android:layout_height="15dp"
                android:background="@color/whilte"
                android:layout_gravity="center_vertical"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="累计收益"
                    android:textColor="#000000"
                    android:textSize="10sp"
                    android:gravity="center_vertical|center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="15000.00"
                    android:textColor="#8382F8"
                    android:textSize="15sp"
                    android:gravity="center_vertical|center"
                    android:layout_marginTop="10dp"
                    />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>